<%= render 'tab' %>
<h3> 
  All Lists
</h3>

<table class="table table-striped">
  <tr>
    <th>
      #
    </th>
    <th>
      idx
    </th>
    <th>
      Title
    </th>
    <th>
      Permalink
    </th>
    <th>
      Delete
    </th>
  </tr>
  <% @lists.each do |list| %>
  <tr>
    <td><%= list.id %></td>
    <td>
      <%= render partial: 'idx_update_form', locals: {list: list} %>
    </td>
    <td><%= link_to "#{list.title_ko} / #{list.title_en}", edit_admin_list_path(list) %></td>
    <td><%= list.permalink %></td>
    <td>
      <%= link_to 'Delete', admin_list_path(list), data: {method: 'delete', confirm: 'are you sure?'} %>
    </td>
  </tr>
  <% end %>
</table>

<%= link_to 'New List', new_admin_list_path, :class => 'btn btn-default' %>
